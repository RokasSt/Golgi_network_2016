<Lems>

    

    <Target component="sim1"/>

    <Include file="NeuroMLCoreDimensions.xml"/>
    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>
    <Include file="LEMS_multi_component.xml"/>
    
   
    
   <expThreeSynapse id="MFSpikeSyn" gbase1="1.5nS" tauRise="0.1ms" tauDecay1="0.7ms" gbase2="0.5nS" tauDecay2="2.5ms"  erev="0mV"/> 

   <!--<pulseGenerator id="input0" delay="50ms" duration="500ms" amplitude="1E-5uA" />-->

   <transientPoissonFiringSynapse id="input0" delay="50ms" duration="50ms" averageRate="300 Hz" synapse="MFSpikeSyn" spikeTarget="./MFSpikeSyn"/>


    <iafCell id="iaf1" leakReversal="-60mV" thresh="-40mV" reset="-65mV" C="1e-5uF" leakConductance="5e-7mS"/>
    <iafCell id="iaf2" leakReversal="-60mV" thresh="-40mV" reset="-70mV" C="1e-5uF" leakConductance="5.2e-7mS"/>

    <network id="net2">

       

        <population id="Pop0" component="iaf1" size="1"/>

        <population id="Pop1" component="iaf2" size="1"/>

       

     <projection id="projection1" presynapticPopulation="Pop0" postsynapticPopulation="Pop1" synapse="input0">
            <connection preCellId="../Pop0[0]" postCellId="../Pop1[0]"/>
        </projection>
        
        

         <inputList id="stimInput" component="input0" population="Pop0">
           
            <input id="0" target="../Pop0[0]" destination="synapses"/>
        </inputList>



    </network>

   



    <Simulation id="sim1" length="3000ms" step="0.005ms" target="net2">

        

        <Display id="d2" title="Test TwoExponential Two Component Synapse" timeScale="1ms" xmin="0" xmax="2000" ymin="-100" ymax="20">
            
            <Line id="pop0" quantity="Pop0[0]/v" scale="1mV" color="#00ff00" timeScale="1ms"/>
            <Line id="pop1" quantity="Pop1[0]/v" scale="1mV" color="#ff0000" timeScale="1ms"/>
        </Display>

        
        
       
    </Simulation>


</Lems>

  


